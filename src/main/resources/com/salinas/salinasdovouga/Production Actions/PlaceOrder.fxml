<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10" fx:controller="com.salinas.salinasdovouga.Controllers.ProductionActions.PlaceOrderController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Place Order" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <Label text="Product Type:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ChoiceBox fx:id="productTypeChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="quantityTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Submit Order" onAction="#handleSubmitOrder" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
</GridPane>
