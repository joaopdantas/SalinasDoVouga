        <Button layoutX="233.0" layoutY="14.0" onAction="#handleBrowseProducts" text="Browse Products" />
        <Button layoutX="14.0" layoutY="14.0" onAction="#handlePlaceOrder" text="Place Order" />
        <Button layoutX="355.0" layoutY="14.0" onAction="#handleManagePersonalInfo" text="Manage Personal Info" />

        <TableView fx:id="orderTableView" layoutX="6.0" layoutY="45.0" prefHeight="320.0" prefWidth="520.0">
