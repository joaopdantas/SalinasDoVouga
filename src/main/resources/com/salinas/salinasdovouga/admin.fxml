<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salinas.salinasdovouga.Controllers.AdminController">
    <children>
        <VBox alignment="CENTER" spacing="10" />

        <TableView fx:id="userTableView" layoutY="50.0" prefHeight="350.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="usernameColumn" text="Username" />
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="userTypeColumn" text="User Type" />
            </columns>
        </TableView>

        <Button layoutX="214.0" layoutY="14.0" onAction="#handleSystemSettings" text="System Settings" />
         <Button layoutX="14.0" layoutY="14.0" onAction="#handleCreateUser" text="Create User" />
         <Button layoutX="114.0" layoutY="14.0" onAction="#handleDeleteUser" text="Delete User" />
    </children>
</AnchorPane>
