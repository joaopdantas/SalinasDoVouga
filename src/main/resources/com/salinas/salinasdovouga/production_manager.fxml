<AnchorPane id="AnchorPane" prefHeight="449.0" prefWidth="690.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.salinas.salinasdovouga.Controllers.ProductionManagerController">
    <children>
        <VBox alignment="CENTER" spacing="10" />

        <TableView fx:id="productionTableView" layoutY="50.0" prefHeight="387.0" prefWidth="681.0">
            <columns>
                <TableColumn fx:id="batchIdColumn" text="Batch ID" />
                <TableColumn fx:id="productTypeColumn" text="Product Type" />
                <TableColumn fx:id="productionDateColumn" text="Production Date" />
                <!-- Add more columns based on your data model -->
            </columns>
        </TableView>

        <Button layoutX="214.0" layoutY="14.0" onAction="#handleCreateNewBatch" text="Create New Batch" />
        <Button layoutX="14.0" layoutY="14.0" onAction="#handleManageProduction" text="Manage Production Process" />
        <Button layoutX="114.0" layoutY="14.0" onAction="#handleViewProductionDetails" text="View Production Details" />
        <Button layoutX="314.0" layoutY="14.0" onAction="#handleAssociateBatches" text="Associate Batches with Workers" />
        <Button layoutX="414.0" layoutY="14.0" onAction="#handleGenerateFinalBatches" text="Generate Final Product Batches" />
    </children>
</AnchorPane>
